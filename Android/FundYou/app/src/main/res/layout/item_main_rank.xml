<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_main_item_rank"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/bg_rect_whisper_white_round5_stroke1"
        android:padding="4dp"
        tools:src="@drawable/bg_banner_ssafylogo3"/>

    <TextView
        android:id="@+id/tv_main_item_rank_ranking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/iv_main_item_rank"
        app:layout_constraintStart_toEndOf="@+id/iv_main_item_rank"
        style="@style/base_font_bold_16_black"
        android:layout_marginStart="20dp"
        tools:text="1위"/>
    <TextView
        android:id="@+id/tv_main_item_rank_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_main_item_rank_ranking"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_item_rank_ranking"
        style="@style/base_font_medium"
        android:layout_marginTop="6dp"
        tools:text="삼성"/>
    <TextView
        android:id="@+id/tv_main_item_rank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_main_item_rank_ranking"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_item_rank_brand"
        style="@style/base_font_medium_16_black"
        android:layout_marginTop="@dimen/margin_item_between_tv"
        tools:text="상품 이름"/>

    <TextView
        android:id="@+id/tv_main_item_rank_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_main_item_rank_ranking"
        app:layout_constraintTop_toBottomOf="@+id/tv_main_item_rank_name"
        style="@style/base_font_bold_16_black"
        android:layout_marginTop="@dimen/margin_item_between_tv"
        tools:text="2,890,000원"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="50dp"
        android:layout_height="26dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/title_AR_btn"
        android:textColor="@color/franch_rose"
        style="@style/base_font_medium"
        android:background="@drawable/bg_rect_gradient_white_roud10_stroke1"/>
</androidx.constraintlayout.widget.ConstraintLayout>